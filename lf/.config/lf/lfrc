# vim:ft=conf

set shell               zsh
set hidden              true
set icons               true
set number              true
set numberfmt           "\033[2;90m"
set relativenumber      true
set incsearch           true
set watch               true
set scrolloff           10
set previewer           ~/.dotfiles/lf/.config/lf/previewer
set cleaner             ~/.dotfiles/lf/.config/lf/cleaner

# Override open to open text files in Neovim
# and fall back to Finder open on Mac
cmd open &{{
  case $(file --mime-type -Lb $f) in
    text/*) lf -remote "send $id \$$EDITOR \$fx";;
    *) open "$f" ;;
  esac
}}

cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}

cmd rename %[ -e $1 ] && printf "file exists" || mv $f $1

cmd remove ${{
  set -f
  printf "$fx\n"
  printf "remove? [y/n] "
  read ans
  [ "$ans" = "y" ] && rm -rf $fx
}}

cmd open-finder ${{
  open "$(dirname "$(realpath $f)")"
}}

cmd unarchive ${{
  case "$f" in
    *.zip) unzip "$f" ;;
    *.tar.gz) tar -xzvf "$f" ;;
    *.tar.bz2) tar -xjvf "$f" ;;
    *.tar) tar -xvf "$f" ;;
    *) echo "Unsupported format" ;;
  esac
}}

# Keybindings
# <space> - select
# v - invert select
# u - unselect
# p - paste
# z + <key> - view options
# s + <key> - sort options

map . set hidden!
map r push :rename<space>
map go :open-finder
